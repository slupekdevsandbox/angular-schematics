{
  "name": "root",
  "private": true,
  "scripts": {
    "commit": "npx git-cz",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build",
    "release": "lerna publish",
    "test": "lerna run test",
    "clean": "lerna clean",
    "clean:build": "lerna exec -- rimraf lib",
    "ls": "lerna ls",
    "sandbox:install": "cd sandbox && yarn",
    "sandbox:run:ide": "cd sandbox && ng add @objectivity/angular-schematic-ide --vscode",
    "sandbox:clean": "git checkout HEAD -- sandbox && git clean -f -d sandbox",
    "sandbox:link": "lerna exec -- yarn link",
    "sandbox:unlink:windows": "lerna exec -- npx manage-linked-packages -m yarn -a reset -n %LERNA_PACKAGE_NAME%",
    "sandbox:unlink:linux": "lerna exec -- npx manage-linked-packages -m yarn -a reset -n $LERNA_PACKAGE_NAME",
    "sandbox:run:all": "yarn sandbox:clean && yarn sandbox:run:ide",
    "sandbox:test": "cd sandbox && yarn lint && yarn ng test --watch=false --progress=false && yarn e2e && yarn build",
    "ci:sandbox": "yarn sandbox:install && yarn sandbox:link && yarn sandbox:run:all && yarn sandbox:test",
    "ci:build": "yarn bootstrap && yarn build",
    "ci:test": "yarn test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular-devkit/schematics-cli": "^0.800.1",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "git-cz": "^3.0.1",
    "husky": "^2.4.0",
    "lerna": "^3.15.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
